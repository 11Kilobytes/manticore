structure BuildExecutable : sig

    val build : {
	    verbose : bool,
	    asmFile : string,
	    outFile : string
	  } -> OS.Process.status

  end = struct

    val cat = String.concatWith " "

    val isCrossCompiler = (@CROSS_COMPILING@ = 1)
    val ccCmd =  "@CC@"
    val cFlags = "@CFLAGS@"
    val ldFlags = cat [
	    "-L@MANTICORE_LIBDIR@",
	    "-L@MANTICORE_SRCDIR@/lib/parallel-rt/build",
	    "@LDFLAGS@",
	    "-lmanticore",
	    "-lpthread"
	  ]

    val cmd = cat [ccCmd, cFlags, ldFlags]

    fun build {verbose, asmFile, outFile} = if isCrossCompiler
	  then (
	    TextIO.output(TextIO.stdErr, "cross compiler cannot produce executables");
	    OS.Process.failure)
	  else let
	    val cmd' = String.concat[cmd, " -o ", outFile, " ", asmFile]
	    in
	      if verbose
		then TextIO.print(cmd' ^ "\n")
		else ();
	      OS.Process.system cmd'
	    end

  end
