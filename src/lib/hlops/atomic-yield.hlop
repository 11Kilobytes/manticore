#include "types.def"

define @yield (vp : vproc / exh : exh) : unit;

define @atomic-yield (vp : vproc / exh : exh) : unit =
   let _ : unit = @yield (vp / exh)
   do vpstore(ATOMIC, vp, TRUE)
   return (UNIT)
