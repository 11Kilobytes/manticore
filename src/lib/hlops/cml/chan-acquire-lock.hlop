 * Acquire the lock of a channel.
 *)

#include "events.def"

define inline @chan-acquire-lock (ch : chan / exh : exh) : () =
    fun spin (_ : unit / exh : exh) : () =
	  if CH_TRY_LOCK(ch)
	    then apply spin (UNIT / exh)
	    else return ()
    (* in *)
      apply spin (UNIT / exh)
;
