 * Spawn a thread on a remote vproc.
 *)

#include "types.def"

extern void EnqueueOnVProc (void *, void *, void *, void *);

define @dispatch (vp : vproc / exh : exh) noreturn;
define @new-tid (vp : vproc / exh : exh) : tid;

define inline @spawn-on (f : fun (unit / exh -> unit), dst : vproc / exh : exh) : tid =
  cont fiber () =
    cont exh (exn : exn) = @dispatch (host_vproc / exh)
    let (_ : unit) = apply f (UNIT / exh)
    @dispatch (host_vproc / exh)
  let vp : vproc = host_vproc
  let tid : tid = @new-tid(vp / exh)
  do ccall EnqueueOnVProc(vp, dst, tid, fiber)
  return (tid)
;
