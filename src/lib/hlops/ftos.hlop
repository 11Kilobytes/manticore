#include "types.def"

extern void *M_FloatToString (float) __attribute__((alloc,pure));

define inline @ltoa (f : ml_float / exh : exh) : ml_string =
    let res : ml_string = ccall M_FloatToString (unwrap(f))
      return (res)
;
