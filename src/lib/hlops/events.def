#ifndef _EVENTS_DEF_
#define _EVENTS_DEF_

#include "types.def"

(* dirty flags are used to track the state of a synchronization event *)

typedef event_state = enum(2);
typedef dirty_flag = ![event_state];

(* constants for event states *)
#define INIT_EVT	enum(0):event_state
#define WAITING_EVT	enum(1):event_state
#define SYNCHED_EVT	enum(2):event_state


typedef chan = ![    (* all fields are mutable *)
    bool,		(* spin lock *)
    list,		(* sendq head *)
    list,		(* sendq tail *)
    list,		(* recvq head *)
    list		(* recvq tail *)
  ];

#define CH_TRY_LOCK(ch)		TAS(&0(ch))
#define CH_CLR_LOCK(ch)		#0(ch) := TRUE
#define CH_GET_SENDQ_HD(ch)	#1(ch)
#define CH_SET_SENDQ_HD(ch,x)	#1(ch) := x
#define CH_GET_SENDQ_TL(ch)	#2(ch)
#define CH_SET_SENDQ_TL(ch,x)	#2(ch) := x
#define CH_GET_RECVQ_HD(ch)	#3(ch)
#define CH_SET_RECVQ_HD(ch,x)	#3(ch) := x
#define CH_GET_RECVQ_TL(ch)	#4(ch)
#define CH_SET_RECVQ_TL(ch,x)	#4(ch) := x

typedef sendq_item = [any, tid, cont(unit)];
typedef recvq_item = [dirty_flag, tid, cont(any)];

typedef evt_poll_fn = fun(unit / exh -> bool);
typedef evt_do_fn = fun(dirty_flag / exh -> unit);
typedef evt_block_fn = fun(dirty_flag, tid, cont(any) / exh -> unit);

#define CHOOSE_PAT(ev1, ev2)		CHOOSE(ev1 : evt, ev2 : evt)
#define BEVT_PAT(pollFn, doFn, blkFn)	\
		BEVT(pollFn : evt_poll_fn, doFn : evt_do_fn, blkFn : evt_block_fn)

#endif /* !_EVENTS_DEF_ */
