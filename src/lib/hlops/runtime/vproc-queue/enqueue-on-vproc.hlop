#include "types.def"

extern void EnqueueOnVProc (void *, void *, void *, void *) __attribute__((alloc));

define inline @enqueue-on-vproc (dst : vproc, tid : tid, k : fiber / exh : exh) : () =
  let k : fiber = promote (k)
  do ccall EnqueueOnVProc(host_vproc, dst, tid, k)
  return ()
;
