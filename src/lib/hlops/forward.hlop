#include "runtime-offsets.def"

define inline @forward (vp : vproc, sig : any) noreturn =
    do vpstore(vp, VP_ATOMIC, TRUE)
    let tos : (cont(any), any) = vpload(vp, VP_ACTION_STK)
    let rest : any = #1(tos)
    do vpstore(vp, VP_ACTION_STK, rest)
    let act : cont(any) = #0(tos)
      throw act(sig)
