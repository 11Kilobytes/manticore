#include "types.def"

define @string-data (s : ml_string) : any;

extern void M_LongToString (long) __attribute__((alloc,pure));

define inline @ltoa (n : ml_long / exh : exh) : ml_string =
    let res : ml_string = ccall M_LongToString (data)
      return (res)
;
